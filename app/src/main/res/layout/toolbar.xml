<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorToolbar"
    app:popupTheme="@style/AppTheme"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img_use_to_measure"
                android:layout_marginRight="5dp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_option"
                android:id="@+id/img_option"
                android:layout_marginRight="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ok"
                android:id="@+id/img_ok"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/img_use_to_measure" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_color"
                android:id="@+id/img_color"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/img_ok"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pic"
                android:id="@+id/img_pic"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/img_color"
                android:layout_toStartOf="@+id/img_color" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                android:id="@+id/img_add"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/rlt_back"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/img_back"
                    android:layout_alignParentTop="true"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/img_back"
                    android:id="@+id/img_symbol"
                    android:src="@drawable/symbol"/>

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:text="Note"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/rlt_back"
                 />



        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.Toolbar>